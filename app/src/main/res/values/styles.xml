<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="imageStyle" parent="CardView">
        <item name="android:contentDescription">character_description"</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="detailedImageStyle" parent="CardView">
        <item name="android:contentDescription">character_description"</item>
        <item name="android:layout_height">216dp</item>
        <item name="android:layout_width">216dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="textStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="detailedTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">32sp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:background">@color/orange</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="LLStyle" parent="Widget.Material3.DrawerLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/orange</item>
    </style>

    <style name="LLStyleForDetails" parent="Widget.Material3.DrawerLayout">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/cardview_dark_background</item>
    </style>

</resources>